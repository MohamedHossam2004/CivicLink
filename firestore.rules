rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    match /users/{uid} {
      allow create: if isAuthenticated();
      allow read, update: if isAuthenticated() && request.auth.uid == uid;
    }

    match /tasks/{taskId} {
      allow read: if isAuthenticated();
      allow create: if isAdmin();
      allow update: if isAuthenticated() && (
        request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(['volunteeredUsers', 'participants', 'lastUpdated'])
      );
      allow delete: if isAdmin();
    }

    match /announcements/{doc} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /savedAnnouncements/{doc} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    match /announcementComments/{doc} {
      allow read: if true;
      allow create: if request.auth != null;
    }

    match /reports/{doc} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.userId;
    }

    match /advertisements/{doc} {
      allow read: if true;
      allow create, update, delete: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.type == 'Advertiser';
    }

    match /polls/{pollId} {
      allow read: if true;
      allow create: if request.auth != null;
    }

    match /polls/{pollId}/choices/{choiceId} {
      allow read, write: if request.auth != null;
    }

    match /pollVotes/{doc} {
      allow create: if request.auth != null;
    }

    match /chats/{chatId} {
      allow read, write: if isAuthenticated();
    }

    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if isAuthenticated();
    }
  }
}